# Environment
DENO_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Admin Panel
ADMIN_PATH=/admin

# Database
DATABASE_URL=./lexcms.db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Media Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Cache Configuration
# Redis is disabled in development mode (DENO_ENV=development)
# Set REDIS_ENABLED=true to use Redis in production
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=lexcms:

# Memory Cache Configuration (used when Redis is disabled)
CACHE_MEMORY_MAX_SIZE=10000
CACHE_MEMORY_CLEANUP_INTERVAL=60000

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
