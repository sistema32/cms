# Environment
DENO_ENV=development

# Server
PORT=8000
HOST=0.0.0.0
BASE_URL=http://localhost:8000

# Admin Panel
ADMIN_PATH=/admincp

# Database
# SQLite for development
DATABASE_URL=file:./data/db.sqlite
# PostgreSQL for production
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Media Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Cache Configuration
# Redis is disabled in development mode (DENO_ENV=development)
# Set REDIS_ENABLED=true to use Redis in production
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=lexcms:

# Memory Cache Configuration (used when Redis is disabled)
CACHE_MEMORY_MAX_SIZE=10000
CACHE_MEMORY_CLEANUP_INTERVAL=60000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Security - Two-Factor Authentication (2FA)
# true = enabled (recommended for production)
# false = disabled (development/testing)
ENABLE_2FA=false

# Comments System
# true = enabled, false = disabled
ENABLE_COMMENTS=true

# CAPTCHA - Anti-spam verification system
# Configure all 3 for random rotation, or only the ones you want to use
# Get keys from:
# - reCAPTCHA: https://www.google.com/recaptcha/admin
# - hCaptcha: https://www.hcaptcha.com/
# - Turnstile: https://dash.cloudflare.com/

RECAPTCHA_SECRET_KEY=your-google-recaptcha-secret-key
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key
TURNSTILE_SECRET_KEY=your-cloudflare-turnstile-secret-key

# Optional: Force a specific provider (if not configured, uses random rotation)
# Possible values: recaptcha, hcaptcha, turnstile
# CAPTCHA_PROVIDER=recaptcha

# SEO AI - Automatic SEO metadata generation system
# Requires Ollama installed (https://ollama.com)
# Recommended models: qwen2.5:3b, llama3.2:3b, phi3:mini

# Enable/disable real AI (false = simulation/mock mode)
OLLAMA_ENABLED=false

# Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434

# Model to use (must be downloaded with: ollama pull qwen2.5:3b)
OLLAMA_MODEL=qwen2.5:3b

# Timeout in milliseconds (30000 = 30 seconds)
OLLAMA_TIMEOUT=30000

# Email Configuration
# Provider: console (development), smtp, sendgrid, mailgun, resend
# Console provider logs emails to console (used automatically in development)
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@lexcms.local
EMAIL_FROM_NAME=LexCMS

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=

# Mailgun Configuration (if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Resend Configuration (if EMAIL_PROVIDER=resend)
RESEND_API_KEY=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PROVIDER=local
BACKUP_INCLUDE_MEDIA=true
BACKUP_INCLUDE_DATABASE=true
BACKUP_INCLUDE_CONFIG=true
BACKUP_COMPRESSION=true
BACKUP_NOTIFY_COMPLETE=true
BACKUP_NOTIFY_ERROR=true
BACKUP_LOCAL_PATH=./backups

# S3 Backup Storage (if BACKUP_STORAGE_PROVIDER=s3)
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_PREFIX=backups/
