{
  "name": "cdn-cloudflare",
  "version": "1.0.0",
  "displayName": "Cloudflare CDN Integration",
  "description": "Automatically upload and serve media files from Cloudflare CDN. Improves site performance by serving assets from a global CDN.",
  "author": "LexCMS Team",
  "license": "MIT",
  "homepage": "https://github.com/lexcms/plugin-cdn-cloudflare",

  "compatibility": {
    "lexcms": ">=1.0.0",
    "deno": ">=1.40.0"
  },

  "dependencies": {},

  "permissions": [
    "media:read",
    "media:write",
    "settings:read",
    "network:external",
    "database:write"
  ],

  "hooks": [
    "media:afterUpload",
    "media:beforeDelete",
    "media:getUrl"
  ],

  "settings": {
    "schema": "./settings-schema.json"
  },

  "category": "cdn",
  "tags": ["media", "cdn", "cloudflare", "performance", "optimization"]
}
