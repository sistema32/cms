# Plugin System Configuration

# Rate Limiting
# Maximum database queries per minute per plugin
PLUGIN_RATE_LIMIT_DB_QUERIES=10

# Maximum HTTP requests per minute per plugin
PLUGIN_RATE_LIMIT_HTTP_REQUESTS=30

# Maximum file operations per minute per plugin
PLUGIN_RATE_LIMIT_FILE_OPS=20

# Integrity Verification
# Skip integrity checks (not recommended for production)
PLUGIN_SKIP_INTEGRITY_CHECK=false

# Require all plugins to have checksums (recommended for production)
PLUGIN_REQUIRE_CHECKSUMS=false

# Sandboxing & Resource Limits
# Maximum memory usage per plugin (in MB)
PLUGIN_MAX_MEMORY_MB=256

# Maximum execution time for plugin operations (in milliseconds)
PLUGIN_MAX_EXECUTION_TIME=5000

# Audit Logging
# Number of days to keep audit logs
PLUGIN_AUDIT_RETENTION_DAYS=90

# Security Settings
# Enable strict security mode (enforces all security checks)
PLUGIN_STRICT_MODE=true
