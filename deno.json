{
  "tasks": {
    "dev": "deno run --allow-all --watch src/main.ts",
    "dev:css": "deno task css:watch",
    "dev:all": "deno task css:build && deno task dev",
    "start": "deno run --allow-all src/main.ts",
    "css:build": "deno run -A scripts/build-css.ts",
    "css:watch": "deno run -A scripts/build-css.ts --watch",
    "css:minify": "deno run -A scripts/build-css.ts --minify",
    "css:build:admin": "deno run -A scripts/build-admin-css.ts",
    "css:watch:admin": "deno run -A scripts/build-admin-css.ts --watch",
    "css:build:all": "deno task css:build && deno task css:build:admin",
    "bundle:ckeditor": "sh -c \"cp node_modules/ckeditor5/dist/ckeditor5.css src/admin/assets/css/ckeditor.css && ./node_modules/.bin/esbuild src/admin/assets/js/ckeditor-entry.ts --bundle --format=esm --platform=browser --target=es2018 --outfile=src/admin/assets/js/ckeditor-bundle.js --loader:.svg=text --loader:.ttf=dataurl --loader:.woff=dataurl --loader:.woff2=dataurl && rm -f src/admin/assets/js/ckeditor-bundle.css\"",
    "db:generate": "deno run -A npm:drizzle-kit generate",
    "db:migrate": "deno run --allow-all src/db/migrate.ts",
    "db:push": "deno run -A npm:drizzle-kit push",
    "db:studio": "deno run -A npm:drizzle-kit studio",
    "db:seed": "deno run --allow-all src/db/seed.ts",
    "test": "deno test --allow-all tests/",
    "test:unit": "deno test --allow-all tests/unit/",
    "test:security": "deno test --allow-all tests/security/",
    "test:integration": "deno test --allow-all tests/integration/",
    "test:coverage": "deno test --allow-all --coverage=coverage tests/",
    "test:watch": "deno test --allow-all --watch tests/"
  },
  "imports": {
    "hono": "jsr:@hono/hono@^4",
    "hono/logger": "jsr:@hono/hono@^4/logger",
    "hono/cors": "jsr:@hono/hono@^4/cors",
    "drizzle-orm": "npm:drizzle-orm@^0.44.7",
    "drizzle-orm/sqlite-core": "npm:drizzle-orm@^0.44.7/sqlite-core",
    "drizzle-orm/pg-core": "npm:drizzle-orm@^0.44.7/pg-core",
    "drizzle-orm/libsql": "npm:drizzle-orm@^0.44.7/libsql",
    "drizzle-orm/postgres-js": "npm:drizzle-orm@^0.44.7/postgres-js",
    "drizzle-kit": "npm:drizzle-kit@^0.30",
    "@libsql/client": "npm:@libsql/client@^0.14",
    "postgres": "npm:postgres@^3.4",
    "@std/dotenv": "jsr:@std/dotenv@^0.225",
    "@std/path": "jsr:@std/path@^0.225",
    "@std/datetime": "jsr:@std/datetime@^0.225",
    "@std/fs": "jsr:@std/fs@^1",
    "djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts",
    "bcrypt": "https://deno.land/x/bcrypt@v0.4.1/mod.ts",
    "zod": "npm:zod@^3.23",
    "tailwindcss": "npm:tailwindcss@^3.4.0",
    "@tailwindcss/cli": "npm:tailwindcss@^3.4.0",
    "autoprefixer": "npm:autoprefixer@^10.4",
    "lowlight": "npm:lowlight@^3.1.0"
  },
  "nodeModulesDir": "manual",
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true
  }
}
